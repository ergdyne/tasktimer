<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/pad_small_item"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button_addTag"
            android:dropDownHeight="wrap_content"
            android:hint="@string/hint_tag" />

        <Button
            android:id="@+id/button_addTag"
            style="@style/custom_button"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/but_add" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
